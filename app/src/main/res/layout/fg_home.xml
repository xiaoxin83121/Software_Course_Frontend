<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/user_img_horizontal_margin"
        android:layout_marginLeft="@dimen/user_img_horizontal_margin"
        android:layout_marginTop="@dimen/user_img_vertical_margin"
        android:contentDescription="@string/user_image_description"
        android:background="#6699FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/user_default" />


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_horizontal_margin"
        android:layout_marginLeft="@dimen/text_horizontal_margin"
        android:layout_marginTop="112dp"
        android:drawablePadding="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@drawable/ic_icon_signal"
        android:text="@string/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_horizontal_margin"
        android:layout_marginLeft="@dimen/text_horizontal_margin"
        android:layout_marginTop="164dp"
        android:drawablePadding="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@drawable/ic_icon_phone"
        android:text="@string/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Spinner
        android:id="@+id/h_mode_spinner"
        style="@style/SpinnerSmallTheme"
        android:layout_width="@dimen/spinner_width"
        android:layout_height="@dimen/spinnerpop_height"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="280dp"
        android:entries="@array/mode_array"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/h_sensor_spinner"
        style="@style/SpinnerSmallTheme"
        android:layout_width="@dimen/spinner_width"
        android:layout_height="@dimen/spinnerpop_height"
        android:layout_marginLeft="240dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="@dimen/spinnerpop_confirm_margin"
        android:layout_marginEnd="@dimen/spinnerpop_confirm_margin"
        android:entries="@array/sensor_array"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sensor_list"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="340dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


